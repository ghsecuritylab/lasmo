# DETECT OS
UNAME_S := $(shell uname -s)
ifeq ($(UNAME_S),Linux)
	OSFLAG := LINUX
endif
ifeq ($(UNAME_S),Darwin)
	OSFLAG := OSX
endif
############################


RULESPATH = $(CHIBIOS)/os/common/startup/ARMCMx/compilers/GCC
include $(RULESPATH)/rules.mk

ifeq ($(OSFLAG),LINUX)
startgdbserver:
	@pidof JLinkGDBServer > /dev/null || JLinkGDBServer -if swd -speed auto -device STM32F767VI

shell:
	tio -b 115200 /dev/ttyACM0

stopgdbserver:
	@pidof JLinkGDBServer > /dev/null && killall JLinkGDBServer || true

debug: $(ELF) startgdbserver
	$(GDB) $(ELF)

.PHONY: startgdbserver stopgdbserver debug
endif
ifeq ($(OSFLAG),OSX)
startgdbserver:
	JLinkGDBServer -if swd -speed auto -device STM32F767VI

shell:
	picocom /dev/cu.usbmodem5001 -b 115200

rttviewer:
	JLinkRTTClient

stopgdbserver:
	@pidof JLinkGDBServer > /dev/null && killall JLinkGDBServer || true

debug: $(ELF)
	$(GDB) $(ELF)

.PHONY: startgdbserver shell  rttviewer stopgdbserver debug
endif

